<h1> stores/configurations/new </h1>

<%= form_for(@store, url: :store_configurations, html: { method: 'post' }) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :budget %>
    <%= f.text_field :budget %>
  </div>
  <div class="field">
    <%= f.label :detail %>
    <%= f.text_field :detail %>
  </div>
  <div class="field">
    <% if @store.image? %>
      <div class="store-image">
        <%= image_tag @store.image.url %>
      </div>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
