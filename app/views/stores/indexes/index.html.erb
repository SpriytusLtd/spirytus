<%= render 'layouts/header' %>

<div class="store-search_criteria">
  <p class="store-index-text"><%= @search_criteria %>で検索した結果</p>
</div>

<div class="store-result-list">
    <% @stores.each do |store| %>
      <p class="store-index-text"><%= link_to store.name, store_path(store.id) %></p>
    <% end %>
<%= will_paginate @stores, previous_label: '<前ページ', next_label: '次ページ>' %>
</div>

<div class="store-index-search-form">
  <p class="store-index-text">再検索フォーム</p>
  <%= form_for :search, method: "get" do |f| %>
  <p>
    <%= f.label :name, '名前' %><br>
    <%= f.text_field :name %>
  </p>

  <p class="store-index-text">名前</p>
  <p>
    <% @resorts.each do |d| %>
      <%= f.label :name, d.name %>
      <%= f.radio_button 'resort', d.id, {} %>
    <% end %>
  </p>

  <p class="store-index-text">お酒</p>
  <p>
    <% @drinks.each do |d| %>
      <%= f.label :name, d.name %>
      <%= f.radio_button 'drink', d.id, {} %>
    <% end %>
  </p>

  <p class="store-index-text">郷土料理</p>
  <p>
    <% @dishes.each do |d| %>
      <%= f.label :name, d.name %>
      <%= f.radio_button 'dish', d.id, {} %>
    <% end %>
  </p>

  <p>
    <%= submit_tag "検索" %>
  </p>

  <% end %>
</div>

<%= render 'layouts/footer' %>
