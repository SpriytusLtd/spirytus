<html>
<head>
<script type='text/javascripts' src="assets/drinks/jquery-1.11.3.min.js"></script>
<script type="application/javascript" src="/assets/drinks/jquery.raty.js"></script>
</head>
<body>
  <%= render "form" %>
  <% @drink.reviews.each do |review| %>
    <%= javascript_tag do %>
    window.total_score = <%= review.param1 %>;
    <% end %>
    <script type="text/javascript">
    $(function(){
      $.fn.raty.defaults.path = "/assets/";
      $(".review_total").raty({
        readOnly: true,
        score: function(){
          return $(this).attr("data-score");
          },
        });
      });
    </script>

    <div class="review_total" data-score = <%= review.param1 %>> </div>
    <p><%= review.body %></p>
    <p><%= link_to "詳細を表示", drink_review_path(id:review) %> </p>
    <p><%= link_to "レビューを編集", edit_drink_review_path(id:review) %> </p>
    <p><%= link_to "レビューを削除", drink_review_path(id:review), method: :delete %></p>
    <% end %>
</body>
</html>
