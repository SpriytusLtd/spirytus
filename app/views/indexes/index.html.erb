<h1>Indexes#index</h1>
<p>Find me in app/views/indexes/index.html.erb</p>

<div>
  <% unless store_signed_in? %>
    <% if user_signed_in? %>
      <%= link_to 'User Page', user_path(current_user) %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Sign Up', new_user_registration_path %> |
      <%= link_to 'Sign In', new_user_session_path %>
    <% end %>
  <% end %>
</div>

<div>
  <% unless user_signed_in? %>
    <% if store_signed_in? %>
      <%= link_to '店アカウントの専用ページ', store_path(current_store) %>
      <%= link_to '店アカウント用ログアウト', destroy_store_session_path, method: :delete %>
    <% else %>
      <%= link_to '店アカウント作成申請', new_store_registration_path %>
      <%= link_to '店アカウント用ログイン', new_store_session_path %>
    <% end %>
  <% end %>
</div>
