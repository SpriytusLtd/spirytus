<header>
  <%= image_tag 'rogo.png', class: 'header-log' %>
  <div class="header-login">
    <% unless store_signed_in? %>
      <% if user_signed_in? %>
        <%= button_tag class: 'btn btn-default' do %>
          <%= link_to 'User Page', user_path(current_user) %>
        <% end %>
        <%= button_tag class: 'btn btn-default' do %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        <% end %>
      <% else %>
        <%= button_tag class: 'btn btn-default' do %>
          <%= link_to 'Sign Up', new_user_registration_path %>
        <% end %>
        <%= button_tag class: 'btn btn-default' do %>
          <%= link_to 'Sign In', new_user_session_path %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</header>

<nav>
  <ul class="nav nav-tabs">
    <li class="active"><a href="#home" data-toggle="tab"><span class="text-muted"><strong>お酒</strong></span></a></li>
    <li><a href="#about" data-toggle = "tab"><span class="text-muted"><strong>食材</strong></span></a></li>
    <li><a href="#about2" data-toggle = "tab"><span class="text-muted"><strong>観光地</strong></span></a></li>
    <li><a href="#about3" data-toggle = "tab"><span class="text-muted"><strong>店舗</strong></a></span></li>
  </ul>
</nav>


<div class="tab-content">
  <div class="tab-pane active" id="home">
    <div class="tab_bottom_form">
      <form class="navbar-form navbar-left" role="search" action="<%= drinks_path %>" method="get">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="検索" name="search">
        </div>
        <button type="submit" class="btn btn-default">検索</button>
      </form>
    </div>

    <div class="range">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="2000">
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          <li data-target="#carousel-example-generic" data-slide-to="3"></li>
          <li data-target="#carousel-example-generic" data-slide-to="4"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= image_tag 'slide_folder/view1.jpg', alt: '...', width: '700', height: '440' %>
          </div>
          <div class="item">
            <%= image_tag 'slide_folder/view2.jpg', alt: '...', width: '700', height: '440' %>
          </div>
          <div class="item">
            <%= image_tag 'slide_folder/view3.jpg', alt: '...', width: '700', height: '440' %>
          </div>
          <div class="item">
            <%= image_tag 'slide_folder/view4.jpg', alt: '...', width: '700', height: '440' %>
          </div>
          <div class="item">
            <%= image_tag 'slide_folder/view5.jpg', alt: '...', width: '700', height: '440' %>
          </div>
        </div>

        <%= link_to '#carousel-example-generic', class: 'left carousel-control', role: 'button', data: { 'data-slide' => 'prev' } do %>
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        <% end %>
        <%= link_to '#carousel-example-generic', class: 'right carousel-control', role: 'button', data: { 'data-slide' => 'next' } do %>
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        <% end %>
      </div>
    </div>
  </div>
</div>




<div>
  <% unless user_signed_in? %>
    <% if store_signed_in? %>
      <%= link_to '店アカウントの専用ページ', store_configurations_path(current_store) %>
      <%= link_to '店アカウント用ログアウト', destroy_store_session_path, method: :delete %>
    <% else %>
      <%= link_to '店アカウント作成申請', new_store_registration_path %>
      <%= link_to '店アカウント用ログイン', new_store_session_path %>
    <% end %>
  <% end %>
</div>
